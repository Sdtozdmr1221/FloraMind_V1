@model FloraMind_V1.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null; // Layout = null ayarınız korunmuştur
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Register.css" />

</head>
<body>
    <div class="container" id="registerContainer">
        <div class="logo-icon">
            <i class="fas fa-seedling"></i>
        </div>
        <h2>Kayıt Ol</h2>
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
        </div>

        <form asp-controller="Account" asp-action="Register" method="post" id="registerForm">

            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors" style="color: red; margin-bottom: 10px;"></div>

            <div class="input-group">
                <i class="fas fa-user"></i>
                <input asp-for="UserName" placeholder="Kullanıcı Adı" />
            </div>
            <span asp-validation-for="UserName" class="text-danger validation-message"></span>

            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" placeholder="E-posta" />
            </div>
            <span asp-validation-for="Email" class="text-danger validation-message"></span>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" placeholder="Şifre" />
            </div>
            <span asp-validation-for="Password" class="text-danger validation-message"></span>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="CheckPassword" placeholder="Şifre Tekrarı" />
            </div>
            <span asp-validation-for="CheckPassword" class="text-danger validation-message"></span>

            <div class="button-group">
                <button type="submit" class="btn-register btn-primary">Kayıt Ol</button>

                <a asp-controller="Account" asp-action="Login" id="goToLogin" class="btn-register btn-secondary">Giriş Yap</a>
            </div>
            <div class="home-button">
                <a asp-controller="Home" asp-action="Index" id="goToLayout" class="btn-register btn-primary">Giriş Sayfasına Dön</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @* <script src="~/js/register.js"></script> *@ 

</body>
</html>