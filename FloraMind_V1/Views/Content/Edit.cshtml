@model FloraMind_V1.Models.Content
@{
    ViewData["Title"] = "İçeriği Düzenle";
}
<h2>İçeriği Düzenle: @Model.Title</h2>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>  

            <input type="hidden" asp-for="ContentID" />
            <input type="hidden" asp-for="UserID" />         
            <input type="hidden" asp-for="DateCreated" />    

            <div class="form-group mb-3">
                <label asp-for="PlantID">İçeriğin Ait Olduğu Bitki</label>
                <select asp-for="PlantID" class="form-control" asp-items="ViewBag.PlantID">
                    <option value="">-- Seçiniz --</option>   
                </select>
                <span asp-validation-for="PlantID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Title">İçerik Başlığı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Body">İçerik Metni</label>
                <textarea asp-for="Body" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}