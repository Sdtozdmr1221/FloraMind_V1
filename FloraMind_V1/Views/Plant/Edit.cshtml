@model FloraMind_V1.Models.Plant

@{
    ViewData["Title"] = "Bitki Düzenle";
}

<h2>@Model.Name Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PlantID" />

            <div class="form-group">
                <label asp-for="Name">Bitki Adı (Ortak)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Species">Bitki Türü (Bilimsel)</label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Katalog Listesine Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}